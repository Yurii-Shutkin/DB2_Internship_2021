{
  "extends": ["eslint:recommended", "google"],
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "object-curly-spacing": ["error", "always"],
    "template-curly-spacing": ["error", "always"],
    "no-cond-assign": ["error", "always"],
    "no-console": "off",
    "eol-last": "error"
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 8
  }
}
